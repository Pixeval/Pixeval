<controls:EnhancedWindowPage
    x:Class="Pixeval.Controls.Windowing.TabPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Pixeval.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Pixeval.Controls.Windowing"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <TabView
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        SelectedItem="{x:Bind SelectedItem, Mode=TwoWay}"
        TabCloseRequested="TabView_OnTabCloseRequested"
        TabItemsSource="{x:Bind ViewModels}">
        <TabView.TabItemTemplate>
            <DataTemplate x:DataType="local:NavigationViewTag">
                <TabViewItem
                    Header="{x:Bind Header}"
                    IconSource="{x:Bind IconSource}"
                    IsClosable="True">
                    <Frame Loaded="Frame_OnLoaded" Tag="{x:Bind}" />
                </TabViewItem>
            </DataTemplate>
        </TabView.TabItemTemplate>
    </TabView>
</controls:EnhancedWindowPage>
