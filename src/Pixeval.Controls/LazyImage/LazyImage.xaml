<UserControl
    x:Class="Pixeval.Controls.LazyImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid CornerRadius="{ThemeResource ControlCornerRadius}">
        <!--  ReSharper disable once UnusedMember.Local  -->
        <ProgressRing
            x:Name="ProgressRing"
            Width="{x:Bind _progressRingSize}"
            Height="{x:Bind _progressRingSize}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            x:Load="{x:Bind ShowProgressRing, Mode=OneWay}" />
        <Image Source="{x:Bind Source, Mode=OneWay}" Stretch="UniformToFill" />
    </Grid>
</UserControl>
