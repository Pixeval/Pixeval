<controls:EnhancedPage
    x:Class="Pixeval.Pages.Capability.RecommendationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Pixeval.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pixeval="using:Pixeval"
    mc:Ignorable="d">
    <controls:WorkContainer x:Name="WorkContainer">
        <controls:WorkContainer.CommandBarElements>
            <controls:EnumComboBox
                x:Name="WorkTypeComboBox"
                SelectedEnum="{x:Bind pixeval:App.AppViewModel.AppSettings.WorkType}"
                SelectionChanged="WorkTypeComboBox_OnSelectionChanged"
                Style="{StaticResource WorkTypeComboBoxStyle}" />
        </controls:WorkContainer.CommandBarElements>
    </controls:WorkContainer>
</controls:EnhancedPage>
