<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Pixeval.Pages.Home.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.2*" />
                <RowDefinition Height="1.5*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    x:Uid="/HomePage/SpotlightSectionTitle"
                    Grid.Row="0"
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="Spotlight" />
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Padding="20,10,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        x:Uid="/HomePage/RecommendedNovelSectionTitle"
                        Grid.Row="0"
                        Style="{StaticResource SubtitleTextBlockStyle}" />
                </Grid>
                <Grid Grid.Column="1" Padding="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        x:Uid="/HomePage/RecommendedIllustrationsSectionTitle"
                        Grid.Row="0"
                        Style="{StaticResource SubtitleTextBlockStyle}" />
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border
                    Margin="10"
                    BorderBrush="{StaticResource SecondaryAccentBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid
                        Padding="10,10,10,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            x:Uid="/HomePage/RecommendedIllustratorsSectionTitle"
                            Grid.Row="0"
                            Style="{StaticResource SubtitleTextBlockStyle}" />
                        <Grid
                            Grid.Row="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch" />
                    </Grid>
                </Border>
            </Grid>
            <Grid Grid.Row="1" Padding="10,10,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    x:Uid="/HomePage/UserFeedSectionTitle"
                    Grid.Row="0"
                    Style="{StaticResource SubtitleTextBlockStyle}" />
            </Grid>
        </Grid>
    </Grid>
</Page>
