<controls:EnhancedPage
    x:Class="Pixeval.Pages.IllustrationViewer.RelatedWorksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Pixeval.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Required"
    Unloaded="RelatedWorksPage_OnUnloaded"
    mc:Ignorable="d">
    <controls:IllustrationView
        x:Name="RelatedWorksIllustrationGrid"
        Margin="5,0,0,0"
        LayoutType="VerticalUniformStack"
        ThumbnailDirection="{x:Bind ThumbnailDirection}" />
</controls:EnhancedPage>
